@model GrowUpNavi.ViewModels.Account.LoginViewModel

@{
    ViewBag.Title = "ログイン";

    var tabIndex = 0;
}

<h2 id="title"><span>ログイン</span></h2>
@using (Html.BeginForm())
{
    <p id="explain">登録したIDとパスワードを入力し、ログインしてください。</p>
    <table id="tbl01">
        <colgroup>
            <col style="width: 20%">
            <col style="width: 10%">
            <col style="width: 70%">
        </colgroup>
        <tbody>
            <tr>
                <th>ID（メールアドレス）</th>
                <td class="inputType"><span>【半角英数字】</span></td>
                <td class="inputField">
                    <ul class="errJs">
                        @*<li class="errTxtEmpty">【！】入力されていません</li>
                        <li class="errTxtChara01">【！】半角英数字・記号にて入力してください</li>
                        <li class="errTxtChara04">【！】メールアドレスとして正しくありません</li>*@
                    </ul>
                    <ul class="errSv"></ul>
                    @*<input type="text" name="mailAddr" placeholder="sample@example.com" autocomplete="off" value="" id="mailaddr" class="ipt01 zenNum2han">*@
                    @Html.TextBoxFor(m => m.Id, new { tabindex = tabIndex++, placeholder = "sample@example.com", autocomplete = "off", @class = "ipt01 hanEisu" })
                </td>
            </tr>
            <tr>
                <th>パスワード</th>
                <td class="inputType"></td>
                <td class="inputField">
                    <ul class="errJs">
                        @*<li class="errTxtEmpty">【！】入力されていません</li>
                        <li class="errTxtChara01">【！】半角英数字・記号にて入力してください</li>*@
                    </ul>
                    <ul class="errSv"></ul>
                    @*<input type="password" name="passwd" autocomplete="off" value="" id="passwd" class="ipt01 mb5">*@
                    @Html.PasswordFor(m => m.Password, new { tabindex = tabIndex++, autocomplete = "off", @class = "ipt01 mb5" })
                    <ul class="notes02">
                        <li class="fsC">※半角英数6～14文字以内で入力してください。</li>
                        <li>※英字は<span class="fwb">大文字</span>と<span class="fwb">小文字</span>を区別します。</li>
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
}
