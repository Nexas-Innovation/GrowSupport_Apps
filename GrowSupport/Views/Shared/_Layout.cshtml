@using System.Configuration
@{ 
    Layout = null;
    var applicationName = (string)ConfigurationManager.AppSettings["ApplicationName"];
    var actionName = (string)ViewContext.RouteData.Values["action"];
}
<!DOCTYPE html>
<html lang="ja-JP">
<head>
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta name="keywords" content="">
    <meta name="Robots" content="NOINDEX,NOFOLLOW">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | @(applicationName)</title>
    @Styles.Render("~/Content/css/bootstrap")
    @Styles.Render("~/Content/css/fontawesome")
    @Styles.Render("~/Content/custom_css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
                <div id="wrap">
                    <div class="main">
                        <div class="headerLogo">
                            <a href="@Url.Action("Login", "Account")">
                                <img src="~/Content/img/logo_header_main.png"/>
                            </a>
                        </div>
                    </div>
                </div>
    <hr class="header-hr"/>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
    <div class="@(actionName) row">
        <div class="container body-content-container col-xs-11 col-sm-11 col-md-9 col-lg-9 col-md-offset-3 col-lg-offset-3">
            @RenderBody()
            <div class="clearfix"></div>
            <div id="pageTop">
                <div class="pageTopInner">
                    <a class="keepClickable" href="#wrap">
                        <img src="~/Content/img/icn_page_top.png" />
                    </a>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <footer>
        <p class="copy col-xs-12 col-sm-12 col-md-12 col-lg-12" style="white-space:nowrap;"><small>Copyright &copy; @DateTime.Now.Year dev-kanage. All rights reserved.</small></p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
